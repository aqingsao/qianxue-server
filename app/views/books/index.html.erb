<div class="row-fluid" ng-controller="BooksCtrl">
  <div class="content clearfix">
 	  <h1>教材 (<span class='count'>{{books.length}}</span>本)</h1>  	  
		<ul class="books">
		  <li class="book" ng-repeat="book in books">
		  	<div class="pic">
	      	  <a class="nbg" href="/books/{{book.id}}">
	      	  	<img src="/assets/zhengzhi_01.png"width="90">
	      	  </a> 		    	
		    </div>
	            
	            <div class="a"></div>
		    <div class="info">
		      <h2 class="profile">
		      	<a class="title" href="/books/{{book.id}}">
		          <span class="title">{{book.title}}</span> 
		          <span class="subTitle">{{book.subTitle}}</span> 
		        </a> 
		      </h2>
		      <div class="summary">
		      <%= form_for :plans, url: plans_path do |f|%>
						<%= f.hidden_field :bookId, value: "{{book.id}}"%>
						<%= f.hidden_field :dueDate, value: 30.days.from_now%>
			      <%= f.submit "我要学习...", :class => "btn btn-info"%>
			      条目：627个；学习人数：1025个
		      <% end %>
		      </div> 
		    </div>
		  </li>	
		</ul>
  </div>
</div>
<% content_for :scripts do %>
  <%= javascript_include_tag "books-index" %>
<% end %>